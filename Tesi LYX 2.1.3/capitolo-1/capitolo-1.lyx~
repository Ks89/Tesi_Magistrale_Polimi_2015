\align center
\begin_inset Graphics
	filename immagini/multigroup-physical-topology-6device.tiff
	lyxscale 50
	scale 70

\end_inset


\begin_inset space \hfill{}
\end_inset


\begin_inset Graphics
	filename immagini/multigroup-physical-topology-6device_con_IP.tiff
	lyxscale 50
	scale 70

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
